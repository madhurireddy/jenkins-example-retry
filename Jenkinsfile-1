pipeline {
  agent any
  stages {
    stage('stage 1') {
      steps {
        sh 'echo stage 1'
      }
    }
    stage('stage 2') {
      steps {
        script {
          print 'target build version...'
          def listing = sh script: 'ls -la /', returnStdout:true
          def op = sh(returnStdout: true, script: './test-script.sh').trim()
          print 'target build version11...'
          print op
          echo "output=$listing"
        }
      }
    }
    stage('stage 3') {
      steps {
        sh 'echo stage 3'
      }
    }
  }
}
